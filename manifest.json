{
  "name": "网易云音乐",
  "author": "Jarvisbutler.cc@gmail.com",
  "manifest_version": 2,
  "homepage_url" : "https://github.com/Resurrection2981/netease-music-crx-plus" ,
  "background": {
    "persistent": true,
    "page": "background.html"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png",
    "48" : "icon-128.png",
    "16" : "icon-128.png"
  },
  "permissions": [
    "storage", 
    "webRequest",
    "webRequestBlocking",
    "contextMenus",
    "https://music.163.com/",
    "*://*.kuwo.cn/",
    "*://*.migu.cn/"
  ],
  "commands": {
    "togglePlaying": {
      "suggested_key": {
        "default":"MediaPlayPause"
      },
      "description": "MediaPlayPause",
      "global": true
    },
    "playPrev": {
      "suggested_key": {
        "default":"MediaPrevTrack"
      },
      "description": "MediaPrevTrack",
      "global": true
    },
    "playNext": {
      "suggested_key": {
        "default":"MediaNextTrack"
      },
      "description": "MediaNextTrack",
      "global": true
    }
  },
  "update_url": "http://clients2.google.com/service/update2/crx",
  "minimum_chrome_version": "35",
  "content_security_policy": "script-src 'self'; object-src 'self'"
}

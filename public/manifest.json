{
  "name": "网易云音乐",
  "description": "方便自在听网易云音乐的 Chrome 扩展程序",
  "version": "1.0.0",
  "author": "sigoden@gmail.com",
  "homepage_url" : "https://github.com/sigoden/netease-music-crx" ,
  "background": {
    "persistent": true,
    "page": "background.html"
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "./static/img/icon-34.png"
  },
  "icons": {
    "128": "./static/img/icon-128.png"
  },
  "permissions": ["storage", "webRequest", "https://music.163.com/", "contextMenus"],
  "update_url": "http://clients2.google.com/service/update2/crx",
  "minimum_chrome_version": "29",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
